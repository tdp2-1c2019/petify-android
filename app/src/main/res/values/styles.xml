<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/ps</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Title" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/ps_bold</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Subtitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/ps_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Textbox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/dark</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="Texto" parent="android:Widget.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Spinner">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/com_facebook_blue</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:backgroundTint">@color/com_facebook_blue</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/ps_bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/grey</color>
</resources>
