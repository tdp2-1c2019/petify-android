<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_type_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/client_type_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Subtitle"
            android:text="@string/client_type_button_text"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/driver_type_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Subtitle"
            android:text="@string/driver_type_button_text"
            />

    </LinearLayout>

</LinearLayout>